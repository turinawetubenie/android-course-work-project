<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/teal_700"
    tools:context=".complete_profile"
    android:orientation="vertical">
    <TextView
        android:id="@+id/myfarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
        android:text="MyFarmUg"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="30dp"
        android:textStyle="bold|italic"/>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/complete"
    android:text="Complete your profile"
    android:textColor="#6D08FF"
    android:background="#716F73"
    android:layout_below="@+id/myfarm"
    android:textSize="30dp"
    />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="User Name"
        android:textSize="25dp"
        android:id="@+id/user"
        android:inputType="textPersonName"
        android:background="#CECCD1"
        android:layout_below="@+id/complete"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:background="#FFFF"
        android:textSize="20dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/group"
        android:background="#FFFF">

        <RadioButton
            android:id="@+id/male"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Male"
            android:background="#CECCD1"/>

        <RadioButton
            android:id="@+id/female"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Female"
            android:background="#CECCD1"/>
    </RadioGroup>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#CECCD1"
        android:hint="Date_of_birth"
        android:inputType="date"
       android:id="@+id/datepicker"
        />
    <Spinner
        android:id="@+id/district"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        android:background="#CECCD1"
        android:spinnerMode="dialog"
        android:visibility="visible" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What do you specialize in"
        android:background="#FFFF"
        android:textSize="20dp"/>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/poutry"
        android:background="#CECCD1"
        android:text="Poutry"
        android:onClick="CheckBoxClicked"
        />
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/live"
        android:background="#CECCD1"
        android:text="Livestock"
        android:onClick="CheckBoxClicked"
        />
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/crops"
        android:background="#CECCD1"
        android:text="Crops"
        android:onClick="CheckBoxClicked"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How long have you been in farming"
        android:background="#FFFF"
        android:textSize="20dp"/>

    <Spinner
        android:id="@+id/period"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        android:background="#CECCD1"
        android:spinnerMode="dropdown"
        android:visibility="visible" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="submit"
        android:textSize="20dp"
        android:onClick="Click_here"/>


</LinearLayout>